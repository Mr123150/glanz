<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.layout.*?>
<BorderPane fx:controller="ru.mr123150.Controller" fx:id="rootPane" xmlns:fx="http://javafx.com/fxml">
    <top>
        <HBox>
            <Button fx:id="connectBtn" onAction="#connect" text="Connect"/>
            <Button fx:id="hostBtn" onAction="#host" text="Host" />
        </HBox>
    </top>
    <center>
        <Canvas fx:id="canvas" width="500.0" height="500.0"/>
    </center>
    <right>
        <VBox fx:id="rightBox">
            <Canvas fx:id="hcolor" width="360.0" height="20.0" />
            <Canvas fx:id="color" width="360.0" height="360.0" />
        </VBox>
    </right>
</BorderPane>